<SM>:

    Screen1:
        id: screen1
        name: 'screen1'

    Screen2:
        id: screen2
        name: 'screen2'

    r1Screen:
        id: r1screen
        name: 'r1screen'

    r2Screen:
        id: r2screen
        name: 'r2screen'

    r3Screen:
        id: r3screen
        name: 'r3screen'

    r4Screen:
        id: r4screen
        name: 'r4screen'

    r5Screen:
        id: r5screen
        name: 'r5screen'

<Screen1>:
    FloatLayout:
        Video:
            source: 'cubes.mp4'
            state: 'play'
            volume: 0
            allow_stretch: True
            options: {'eos': 'loop'}
            opacity: 0.25

        GridLayout:
            cols: 1
            size_hint: (0.6,0.7)
            pos_hint: {"center_x":0.5, "center_y":0.5}

            Image:
                source: 'mzi.png'
                size_hint: (1.5,1.5)

            Label:
                id: my_label
                name: 'my_label'
                text: "How much would you like to invest?"
                font_size: 48
                color: '90EE90'

            TextInput:
                id: my_input
                name: 'my_input'
                multiline: False
                padding_y: (30,30)
                size_hint: (1, 0.5)

            Button:
                text:"Submit"
                size_hint: (1,0.5)
                bold: True
                background_color: '90EE90'
                on_press: root.parent.ids['screen1'].callback(self)

            Button:
                text:"Exit"
                size_hint: (0.25,0.25)
                pos_hint:(0.1,0.1)
                bold: True
                background_color: '8b0000'
                on_press: root.parent.ids['screen1'].exit(self)

<Screen2>:
    FloatLayout:
        Video:
            source: 'spiral.mp4'
            state: 'play'
            volume: 0
            allow_stretch: True
            options: {'eos': 'loop'}
            opacity: 0.25

        GridLayout:
            cols: 1
            size_hint: (0.6,0.7)
            pos_hint: {"center_x":0.5, "center_y":0.5}

            Image:
                source: 'mzi.png'
                size_hint: (1.5,1.5)

            Label:
                id: my_label
                name: 'my_label'
                text: "What is your risk tolerance (1-5)?"
                font_size: 48
                color: 'FF0000'

            TextInput:
                id: my_input
                name: 'my_input'
                multiline: False
                padding_y: (20,20)
                size_hint: (1, 0.5)

            Button:
                text:"Submit"
                size_hint: (1,0.5)
                bold: True
                background_color: '90EE90'
                on_press: root.parent.ids['screen2'].callback(self)
                on_press: root.parent.ids['r1screen'].callback(self)

            Button:
                text:"Back"
                size_hint: (0.25,0.25)
                pos_hint:(0.1,0.1)
                bold: True
                background_color: '8b0000'
                on_press: root.parent.ids['screen2'].back(self)

